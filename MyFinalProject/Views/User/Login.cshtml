@model MyFinalProject.ViewModels.LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section id="login">
    <div class="container h-100" >
        <div class="row justify-content-center h-100"style="padding-top:18%;">
            <div class="col-10 col-md-9 col-lg-5 wrapper h-100">
                <a href="/" class="black-logo-text mb-4" title="Go to home">
                    <p class="rent">Rent</p>
                    <p class="now">Now</p>
                </a>
                <form method="POST">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group mb-3 position-relative">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" placeholder="Type your username" class="form-control sign-in-input px-3">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group position-relative">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" placeholder="Type your password" class="form-control sign-in-input px-3">
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <p><a asp-action="ForgotPassword">Forgot password?</a></p>
                    <input type="submit" value="Login" class="mt-4">
                </form>
                <p class="text-center mt-5"><a asp-action="register">Or Register</a></p>
            </div>
        </div>
    </div>
</section>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

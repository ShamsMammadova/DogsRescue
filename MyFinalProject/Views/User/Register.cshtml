@model MyFinalProject.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Register";

}

<h2>Register</h2>

<!--Register section start-->
<section id="register">
    <div class="container h-100">
        <div class="row justify-content-center h-100 pt-5" >
            <div class="col-10 col-md-9 col-lg-5 wrapper h-100">
                <a href="/" class="black-logo-text mb-4" title="Go to home">
                    <p class="rent">Adopt</p>
                    <p class="now">Now</p>
                </a>
                <form method="POST">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" placeholder="Type your firstname" class="form-control sign-in-input">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Surname"></label>
                        <input asp-for="Surname" placeholder="Type your lastname" class="form-control sign-in-input">
                        <span class="text-danger" asp-validation-for="Surname"></span>

                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" placeholder="Type your email" class="form-control sign-in-input">
                        <span class="text-danger" asp-validation-for="Email"></span>

                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" placeholder="Type your username" class="form-control sign-in-input">
                        <span class="text-danger" asp-validation-for="UserName"></span>

                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" placeholder="Type your password" class="form-control sign-in-input">
                        <span class="text-danger" asp-validation-for="Password"></span>

                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" placeholder="Confirm your password" class="form-control sign-in-input">
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>

                    </div>
                    <div class="form-group">
                        <input asp-for="TermsCheck">
                        <label for="">I agree to the <a asp-controller="terms" asp-action="index">Terms and Conditions</a></label>
                        <span asp-validation-for="TermsCheck"></span>
                    </div>
                    <input type="submit" value="Register" class="mt-4">
                </form>

                <div class="row" style="margin-left:10px; color:darkred;">
                    <div asp-validation-summary="ModelOnly"></div>
                </div>
                <p class="text-center mt-5"><a asp-action="login">Or Login</a></p>
            </div>
        </div>
    </div>
</section>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
<!--Register section end-->

@model FosterFamily
@{
    ViewData["Title"] = "Details";
        Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="container-fluid">
    <div class="row"style="padding-top:5px;">
        <div class="col-12">
            <img class="img-thumbnail" src="~/img/@Model.Image" />
        </div>
        <div class="col-12">
            <p><b>Name</b> - @Model.Name</p>
        </div>
        <div class="col-12">
            <p><b>City</b> - @Model.Text</p>
        </div>
        <div class="col-12">
            <p><b>Email</b> - @Model.Info</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-block btn-lg" style="margin: 30px 0;">
            <i class="fas fa-pen"></i> Edit
        </a>
        <a asp-action="Client" class="btn btn-primary btn-block btn-lg" style="margin: 30px 0;">
            <i class="fas fa-long-arrow-alt-left"></i> Back to Index
        </a>
    </div>
</div>



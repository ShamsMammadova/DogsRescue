@model HomeVM
@{
    ViewData["Title"] = "Blog";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}


<div class="container-fluid">
    <div class="row" style="margin: 30px 0;">
        <div class="col-12">
            <a asp-action="Create" class="btn btn-primary btn-block">
                <i class="fas fa-plus"></i> Create New  News
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-hover table-responsive">
    <thead>
        <tr>
            <th>Image</th>
            <th>Header</th>
            <th>Content</th>
            <th>PublishedDate</th>
            <th>UpdatedDate</th>
        </tr>
    </thead>
    <tbody>
        @{int count = 1;}
        @foreach (var item in Model.Blogs)
        {
        <tr>
            <td>
                <img style="width:400px;" src="~/img/@item.MainImageUrl" class="img-thumbnail" />
            </td>
            <td>
                @item.Header
            </td>
            <td>
                @item.Content
            </td>
            <td>
                @item.PublishDate
            </td>
            <td>
                @item.UpdatedDate
            </td>
            <td style="vertical-align: middle; text-align: center;">
                <a title="See details" asp-action="Details" asp-route-id="@item.Id" class="btn btn-success"><i class="fas fa-eye"></i></a>
                <a title="Edit News" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                <a title="Delete" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash"></i></a>

            </td>
        </tr>
            count++;
        }
    </tbody>
</table>




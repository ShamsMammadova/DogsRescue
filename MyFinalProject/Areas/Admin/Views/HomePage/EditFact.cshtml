@model Fact
@{
    ViewData["Title"] = "EditFact";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}

<form method="post" enctype="multipart/form-data" style="padding-top:2%;">
 
    <div class="form-group">
        <label asp-for="Icon"></label>
        <input asp-for="Icon" class="form-control" />
        <span asp-validation-for="Icon" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Head"></label>
        <input asp-for="Head" class="form-control" />
        <span asp-validation-for="Head" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Info"></label>
        <input asp-for="Info" class="form-control" />
        <span asp-validation-for="Info" class="text-danger"></span>
    </div>

    <input type="submit" class="btn btn-warning btn-lg btn-block" value="Edit" />
    <a asp-action="Fact" class="btn btn-primary btn-block btn-lg" style="margin: 30px 0;">
        <i class="fas fa-long-arrow-alt-left"></i> Back to Index
    </a>
</form>


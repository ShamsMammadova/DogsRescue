@model MainSlider

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}

    <form method="post" style="padding-top:20px;" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Photo">Photo</label>
            <input asp-for="Photo" accept="image/*" class="form-control" />
            <span asp-validation-for="Photo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Text"></label>
            <input asp-for="Text" class="form-control" />
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Info"></label>
            <input asp-for="Info" class="form-control" />
            <span asp-validation-for="Info" class="text-danger"></span>
        </div>

        <input type="submit" class="btn btn-success btn-block btn-lg" value="Create" />
    </form>

<a asp-area="Admin" asp-controller="HomePageController" asp-action="Slider">
</a>

<a asp-action="Slider" class="btn btn-primary btn-block btn-lg" style="margin: 30px 0;">

@model Donate
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}

<form method="post" style="padding-top:15px;" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="MainPhoto"></label>
        <input asp-for="MainPhoto" accept="image/*" class="form-control" />
        <span asp-validation-for="MainPhoto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Current Image</label>
        <img src="~/img/@Model.MainImageUrl" class="img-thumbnail" style="display: block;" width="300" />
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Info"></label>
        <input asp-for="Info" class="form-control" />
        <span asp-validation-for="Info" class="text-danger"></span>
    </div>

    <input type="submit" class="btn btn-warning btn-lg btn-block" value="Edit" />
    <a asp-action="Donate" class="btn btn-primary btn-block btn-lg" style="margin: 30px 0;">
        <i class="fas fa-long-arrow-alt-left"></i> Back to Index
    </a>
</form>


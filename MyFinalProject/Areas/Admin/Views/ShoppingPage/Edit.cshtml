@model ShopProduct
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Photo"></label>
        <input asp-for="Photo" accept="image/*" class="form-control" />
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Current Image</label>
        <img src="~/img/@Model.Image" class="img-thumbnail" style="display: block;" width="200" />
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <input type="submit" class="btn btn-warning btn-lg btn-block" value="Edit" />
    <a asp-action="Shop" class="btn btn-primary btn-block btn-lg" style="margin: 30px 0;">
        <i class="fas fa-long-arrow-alt-left"></i> Back to Index
    </a>
</form>

